<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minHeight="@dimen/post_bar_vertical_margin">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_thumbnail"
        android:contentDescription="@string/post_thumb_desciption"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:maxWidth="@dimen/post_bar_image_size_small"
        android:minHeight="@dimen/post_bar_image_size_small"
        android:minWidth="@dimen/post_bar_image_size_small"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:baselineAlignBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:longClickable="true" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:id="@+id/ll_postBody"
        android:layout_toRightOf="@+id/post_thumbnail"
        android:layout_alignParentStart="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/wv_postText">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_topic"
                android:textSize="@dimen/post_header_font_size"
                android:textColor="#0F0C5D" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_username"
                android:textColor="#ff117743"
                android:textSize="@dimen/post_header_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_datetime"
                android:textSize="@dimen/post_header_font_size"
                android:paddingEnd="@dimen/post_header_word_spacing"
                android:paddingStart="@dimen/post_header_word_spacing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_postno"
                android:textSize="@dimen/post_header_font_size" />
        </LinearLayout>

        <WebView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wv_postText"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
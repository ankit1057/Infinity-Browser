<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minHeight="@dimen/post_bar_vertical_margin"
    android:id="@+id/ll_post_layout">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_thumbnail"
        android:contentDescription="@string/post_thumb_desciption"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:maxWidth="@dimen/post_bar_image_size_small"
        android:minHeight="@dimen/post_bar_image_size_small"
        android:minWidth="@dimen/post_bar_image_size_small"
        android:scaleType="centerCrop"
        android:baselineAlignBottom="false"
        android:longClickable="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_linear_layout"
            android:measureWithLargestChild="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_topic"
                android:textSize="@dimen/post_header_font_size"
                android:textColor="#0F0C5D" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_username"
                android:textColor="#ff117743"
                android:textSize="@dimen/post_header_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_datetime"
                android:textSize="@dimen/post_header_font_size"
                android:paddingEnd="@dimen/post_header_word_spacing"
                android:paddingStart="@dimen/post_header_word_spacing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_postno"
                android:textSize="@dimen/post_header_font_size" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_postText_top" />
    </LinearLayout>

</LinearLayout>